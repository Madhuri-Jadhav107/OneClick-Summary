{
  "manifest_version": 3,
  "name": "AI Meeting Intelligence",
  "version": "1.0",
  "description": "AI-powered meeting transcription and insights",
  "permissions": [
    "storage",
    "activeTab",
    "microphone"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "http://localhost:3000/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": false,
      "run_at": "document_idle"
    }
  ]
}